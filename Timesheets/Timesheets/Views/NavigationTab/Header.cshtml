@model NM.Web.WebApplication.Timesheets.Models.ViewModel.YearAndPayPeriodViewModel
@{
    ViewBag.Title = "Header Of Timesheet";
    ViewBag.CurrentLoginUserName = User.Identity.Name;
}
<div class="container">
    <br />
    <div id="dvTimesheetHeader">
        @Html.Partial("_YearAndPayPeriod", Model)
    </div>
    <div id="dvTimesheetOverview">
        <p>Timesheet Overview Header</p>
    </div>
</div>

<script type="text/javascript">
    //initialization
    $("#dvTimesheetHeader").attr("class", "hidden");
    $("#dvTimesheetOverview").attr("class", "hidden");

    $(document).ready(function () {
        var currentDocumentPage = $(document).find("title").text();

        if (currentDocumentPage == "Timesheet") {
            $("#dvTimesheetHeader").attr("class", "show");
        }
    });

</script>


